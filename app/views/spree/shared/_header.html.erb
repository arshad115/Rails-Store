<div id="spree-header">
  <header id="header" data-hook>
    <div class="container-fluid top">
      <div class="row">
        <div class="col-md-4 intro">Welcome to our Awesome Store</div>
        <div class="col-md-8 top-menu"><%= render :partial => 'spree/shared/nav_bar' %></div>
      </div>

    </div>
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <figure id="logo"  data-hook>
            <%= logo %>
          </figure>
        </div>
        <div class="col-md-7">
          <%= render :partial => 'spree/shared/search' %>
        </div>
        <div class="col-md-2">
          <ul class="nav navbar-nav navbar-right" data-hook>
            <li id="link-to-cart" data-hook>
              <noscript>
                <%= link_to Spree.t(:cart), '/cart' %>
              </noscript>
              &nbsp;
            </li>
            <script>Spree.fetch_cart()</script>
          </ul>
        </div>
      </div>
    </div>
  </header>
  <div class="container">
    <%= render :partial => 'spree/shared/main_nav_bar' if store_menu? %>
  </div>
</div>
